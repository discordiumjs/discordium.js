{
	"name": "discordium.js",
	"description": "✨ A sleek, modern, and minimalist Discord API wrapper.",
	"version": "1.0.0",
	"module": "src/index.js",
	"types": "global.d.ts",
	"type": "module",
	"homepage": "https://github.com/discordiumjs/discordium.js",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/discordiumjs/discordium.js.git"
	},
	"keywords": [
		"discord",
		"api",
		"wrapper",
		"javascript"
	],
	"author": "Eren (erffy)",
	"contributors": [
		{
			"name": "Megalith",
			"url": "https://github.com/MegalithOfficial"
		},
		{
			"name": "Nicat",
			"url": "https://github.com/Nicat-dcw"
		},
		{
			"name": "Davut Özgür Süküti",
			"url": "https://github.com/davutozgursukuti"
		},
		{
			"name": "Eren",
			"url": "https://github.com/erffy"
		}
	],
	"bugs": {
		"url": "https://github.com/discordiumjs/discordium.js/issues"
	},
	"scripts": {
		"format": "prettier --write .",
		"lint": "eslint . --ext .ts,.js",
		"prepare": "husky",
		"postinstall": "npm run prepare",
		"doc": "typedoc --out docs lib",
		"precommit": "lint-staged",
		"check-format": "prettier --check .",
		"build": "tsc && tsc-alias"
	},
	"dependencies": {
		"@discordjs/builders": "^1.9.0",
		"@discordjs/collection": "^2.1.1",
		"@discordjs/core": "^2.0.0",
		"@discordjs/formatters": "^0.5.0",
		"@discordjs/rest": "^2.4.0",
		"@discordjs/util": "^1.1.1",
		"@discordjs/voice": "^0.18.0",
		"@discordjs/ws": "^2.0.0",
		"@sapphire/snowflake": "^3.5.5",
		"fast-deep-equal": "^3.1.3"
	},
	"devDependencies": {
		"@types/node": "latest",
		"bun-types": "latest",
		"discord-api-types": "^0.37.112",
		"eslint": "^9.17",
		"eslint-config-prettier": "^9.1",
		"eslint-plugin-import": "^2.31",
		"eslint-plugin-node": "^11.1",
		"eslint-plugin-promise": "^7.2",
		"husky": "^9.1.7",
		"lint-staged": "^15.2",
		"prettier": "^3.4",
		"typedoc": "^0.27"
	},
	"peerDependencies": {
		"typescript": "^5.0.0"
	},
	"lint-staged": {
		"*.{ts,js,json,md}": [
			"prettier --write",
			"eslint --fix"
		]
	},
	"private": false,
	"publishConfig": {
		"provenance": true,
		"access": "public"
	}
}
